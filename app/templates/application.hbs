{{labs-site-header}}
<div class="site-main grid-x">

  <div class="search-container">
  </div>

  <div class="map-container cell medium-auto large-order-2">
    {{main-map 
      id='main-map'
      model=model
      initOptions=(hash style='//raw.githubusercontent.com/NYCPlanning/labs-gl-style/master/data/style.json'
                    zoom=10
                    center=(array -74.1197 40.6976))
      mapLoaded=(action 'handleMapLoad')}}
  </div>

  <div class="layer-menu cell large-order-1">
    {{layer-palette
      layerGroups=model.layerGroups}}
  </div>

  <div class="content-close-button-container">
    <button class="content-close-button">Ã—</button>
  </div>
  <div class="content-area cell large-5 large-order-3 xxlarge-4">
    {{outlet}}
  </div>
</div>
